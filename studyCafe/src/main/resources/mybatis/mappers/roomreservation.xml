	<!-- 예약하기  -->
	<insert id="insertRoomReservation"  parameterType="com.studycafe.scafe.reservation.domain.RoomReservation">
		<![CDATA[
		insert into room_reservation(rs_number,user_number,r_number,rs_date,rs_time1, rs_time2, rs_time3, rs_time4,
										rs_time5, rs_time6, u_name,r_price,rs_price,u_tell)
		values(rs_seq.nextval,#{user_number},#{r_number},#{rs_date},#{rs_time1,jdbcType=VARCHAR},#{rs_time2,jdbcType=VARCHAR},#{rs_time3,jdbcType=VARCHAR},#{rs_time4,jdbcType=VARCHAR},
				#{rs_time5,jdbcType=VARCHAR},#{rs_time6,jdbcType=VARCHAR},#{u_name},#{r_price},#{rs_price},#{u_tell})
		]]>
	</insert>

	<!-- 전체 예약 조회 -->
	<select id="getAllReservationConfirm"
			resultMap="roomreservationResult">
 	<![CDATA[	
	select * from room_reservation
  	]]>
	</select>


	<!-- 내 예약 조회 -->
	<select id="getReservationConfirm"
			resultMap="roomreservationResult"
	        parameterType="int">
 	<![CDATA[	
	select * from room_reservation
	where user_number= #{user_number}
  	]]>
	</select>
	
	<!-- 날짜별 예약상황조회 101번방 -->
	<select id="timeCheckA"
			resultMap="roomreservationResult"
	        parameterType="String">
 	<![CDATA[	
	select r_number, rs_time1,rs_time2,rs_time3,rs_time4,rs_time5,rs_time6 
	from room_reservation
	where rs_date = #{rs_date} and r_number=101
  	]]>
	</select>
	
