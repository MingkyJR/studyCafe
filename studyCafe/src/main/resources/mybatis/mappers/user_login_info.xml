 <mapper namespace="mapper.user_login">
 
	<!-- 로그인 -->
	<select id="loginCheck" resultType="String">
		 <![CDATA[	
			SELECT u_name
			FROM user_info
			WHERE u_id = #{u_id} AND u_pass = #{u_pass}
			]]>
	</select>
	
	
